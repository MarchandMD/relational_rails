<div class="row mt-3 justify-content-center">
  <div class="col-6 border border-1">
    <h2>Update the Trail</h2>
    <%= form_with(url: "/trails/#{@trail.id}", method: :patch, local: true) do |form| %>
      <div class="mt-3">
        <%= form.label :name, 'Trail Name' %>
        <%= form.text_field :name %>
      </div>
      <div class="mt-3">
        <%= form.label :trail_open %>
        <%= form.select(:trail_open, options_for_select([true, false])) %>
      </div>
      <div class="mt-3">
        <%= form.label :elevation_drop %>
        <%= form.number_field :elevation_drop %>
      </div>
      <div class="mt-3"><%= form.submit "Update #{@trail.name}", class: "btn btn-primary m-2" %></div>
    <% end %>
  </div>
</div>
