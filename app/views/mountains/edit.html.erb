<div class="row mt-3">
  <div class="col d-flex flex-column align-items-center">
<h2>Edit <%= @mountain.name %></h2>
    <%= form_with(url: "/mountains/#{@mountain.id}", method: :patch, local: true) do |form| %>
      <div class="mt-3">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div class="mt-3">
        <%= form.label :handicap_accessible %>
        <%= form.select(:handicap_accessible, options_for_select([true, false])) %>
      </div>
      <div class="mt-3">
        <%= form.label :elevation %>
        <%= form.number_field :elevation %>
      </div>
      <div class="mt-3"><%= form.submit "Update Mountain", class: 'btn btn-warning' %></div>
    <% end %>
  </div>
</div>
