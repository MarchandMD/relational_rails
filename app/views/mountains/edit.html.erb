<%= form_with(url: "/mountains/#{@mountain.id}", method: :patch, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

<%= %>
  <%= form.label :handicap_accessible %>
  <%= form.select(:handicap_accessible, options_for_select([true, false])) %>

  <%= form.submit "Update Mountain" %>
<% end %>