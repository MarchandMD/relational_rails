<div class="row mt-3 justify-content-center">
  <div class="col-4">
    <table class="table">
      <tr>
        <h1><%= @mountain.name %></h1>
      </tr>
      <tr>
        <td>Number of trails:</td>
        <td><%= @mountain.trails.count %></td>
      </tr>
      <tr>
        <td>Handicap accessible:</td>
        <td><%= @mountain.handicap_accessible %></td>
      </tr>
      <tr>
        <td>Mountain Elevation:</td>
        <td><%= @mountain.elevation %></td>
      </tr>
      <tr>
        <td>created at:</td>
        <td><%= @mountain.created_at %></td>
      </tr>
      <tr>
        <td>updated at:</td>
        <td><%= @mountain.updated_at %></td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col d-flex justify-content-around">
    <%= link_to "#{@mountain.name} trails", "/mountains/#{@mountain.id}/trails", class: "btn btn-primary" %>
    <%= link_to "Delete #{@mountain.name}", "/mountains/#{@mountain.id}", method: :delete, class: "btn btn-danger" %>
    <%= link_to "Update Mountain", "/mountains/#{@mountain.id}/edit", class: "btn btn-warning" %>
  </div>
</div>
