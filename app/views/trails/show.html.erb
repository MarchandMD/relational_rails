<div class="row mt-3">
  <div class="col d-flex flex-column align-items-center">
    <h2><%= @trail.name %></h2>
    <div class="p-2">Trail Open: <%= @trail.trail_open %></div>
    <div class="p-2">Elevation drop: <%= @trail.elevation_drop %></div>
    <div class="p-2">
      <%= link_to "Delete #{@trail.name}", "/trails/#{@trail.id}", method: :delete, class: 'btn btn-danger' %>
      <%= link_to "Update #{@trail.name}", "/trails/#{@trail.id}/edit" , class: "btn btn-warning text-light" %>
    </div>
  </div>
</div>
