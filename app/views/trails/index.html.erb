<div class="row">
  <div class="col">
  </div>
</div>
<div class="row justify-content-center border border-1 m-3">
  <div class="col-12">
    <h3 class="display-5">ALL TRAILS</h3>
    <table class="table table-hover">
      <tr class="text-center">
        <td>trail name</td>
        <td>trail open</td>
        <td>elevation drop</td>
        <td></td>
        <td></td>
      </tr>
      <% @trails.each do |trail| %>
        <tr>
          <td class="text-center"><%= link_to trail.name, "/trails/#{trail.id}", class: "text-decoration-none" %></td>
          <td><%= trail.trail_open %></td>
          <td><%= trail.elevation_drop %></td>
          <td><%= link_to "Update #{trail.name}", "/trails/#{trail.id}/edit" %></td>
          <td><%= link_to "Delete #{trail.name}", "/trails/#{trail.id}", method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
